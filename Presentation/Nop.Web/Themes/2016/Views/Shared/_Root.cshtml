@{
    Layout = "~/Views/Shared/_Root.Head.cshtml";
}
@Html.Widget("body_start_html_tag_after")
@Html.Partial("_Notifications")
@Html.Action("JavaScriptDisabledWarning", "Common")
@Html.Partial("OldInternetExplorerWarning")
<div id="wrapper">
    <script type="text/javascript">
        AjaxCart.init (false, '.header-links .cart-qty', '.header-links .wishlist-qty', '#flyout-cart');
    </script>
    <div class="content">
        <header class="clearfix">
            <a href="/" class="logo-linkor"><img src="/Themes/2016/Content/img/logoLinlor.png" alt="linkor"></a>
            <div class="social right">
                <a href="https://www.facebook.com/linkorskimboards/?pnref=lhc" class="icon-fb"></a>
                <a href="https://vimeo.com/search?q=linkorskimboards" style="position: relative; display: inline-block; float: left; margin-right: 28px; margin-top: 4px;">
                    <img src="/Themes/2016/Content/img/vimeo-logo.png" style="height: 30px">
                </a>
                @Html.Action("LanguageSelector", "Common")
            </div>
            <a href="#" id="touch-menu"><span></span></a>
            @Html.Action("TopMenu", "Catalog")
        </header>

        @RenderBody()

    </div>
    <footer>
        <div class="social left">
            <p>Присоединяйтесь к нам!</p>
            <div class="social-wrap">
                <a href="https://www.facebook.com/linkorskimboards/?pnref=lhc" class="icon-fb"></a>
            </div>
        </div>
        <div class="copyright right">
            <p>&copy; @DateTime.Now.Year Linkor Skimboards</p>
        </div>
    </footer>
</div>
@Html.Widget("body_end_html_tag_before")





